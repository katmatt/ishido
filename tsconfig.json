{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "strict": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "sourceRoot": "/src",
        "lib": [
            "es6",
            "dom",
        ],
        "target": "ES2016",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

